<% include ../partials/header %>

<header class="jumbotron">
  <h1 class="text-center">Welcome to Roomly</h1>
  <p class="text-center">View our hand-picked rooms from all over the world</p>
</header>

<div class="row text-center">
  <% rooms.forEach(function(room){ %>
  <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
    <div class="card">
      <img src="<%= room.image %>" class="card-img-top thumbnails" alt="<%= room.name %>" />
      <div class="card-body">
        <h5 class="card-title"><%= room.name %></h5>
        <% if (room.rating === 0) { %>
        <p><em>No reviews yet.</em></p>
        <% } else { %>
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star <% if (room.rating > 1.5) { %> checked <% } %>"></span>
        <span class="fa fa-star <% if (room.rating > 2.5) { %> checked <% } %>"></span>
        <span class="fa fa-star <% if (room.rating > 3.5) { %> checked <% } %>"></span>
        <span class="fa fa-star <% if (room.rating > 4.5) { %> checked <% } %>"></span>
        <% } %>
        <p class="mt-3"><a href="/rooms/<%= room._id %>" class="btn btn-primary">More Info</a></p>
      </div>
    </div>
  </div>
  <% });%>
</div>

<% include ../partials/footer %>
