<% include ../partials/header %>

<div class="row justify-content-center">
  <div class="col-md-12 text-center">
    <h1 style="text-align: center;">Create a new room</h1>
  </div>
  <div class="col-xs-12 col-md-6 col-lg-4">
    <form action="/rooms" method="POST">
      <div class="form-group">
        <input class="form-control" type="text" name="room[name]" placeholder="name" required/>
      </div>
      <div class="form-group">
        <input class="form-control" type="number" name="room[price]" placeholder="price" min="0.01" step="0.01" required/>
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="room[image]" placeholder="image url" required/>
      </div>
      <div class="form-group">
        <textarea
          class="form-control"
          name="room[description]"
          rows="3"
          placeholder="description"
          required
        ></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary btn-lg btn-default btn-block">Submit!</button>
      </div>
    </form>
    <a href="/rooms">Go Back</a>
  </div>
</div>

<% include ../partials/footer %>