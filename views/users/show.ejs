    <h3><%= user.firstName %>'s listings:</h3>
    <div class="row text-center">
      <% rooms.forEach(function(room){ %>
      <div class="col-lg-6">
        <div class="card shadow">
          <div class="inner">
            <img src="<%= room.image %>" class="card-img-top thumbnails" alt="<%= room.name %>" />
          </div>
          <div class="card-body pt-2">
            <p class="room-type mb-0">Entire Apartment Â· 1 bed</p>
            <h5 class="card-title"><%= room.name %></h5>
            <% if (room.rating === 0) { %>
            <p><em>No reviews yet.</em></p>
            <% } else { %>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star <% if (room.rating > 1.5) { %> checked <% } %>"></span>
            <span class="fa fa-star <% if (room.rating > 2.5) { %> checked <% } %>"></span>
            <span class="fa fa-star <% if (room.rating > 3.5) { %> checked <% } %>"></span>
            <span class="fa fa-star <% if (room.rating > 4.5) { %> checked <% } %>"></span>
            <% } %>
            <p class="mt-3"><a href="/rooms/<%= room._id %>" class="btn btn-card btn-primary">More Info</a></p>
          </div>
        </div>
      </div>
      <% });%>
    </div>
	</div>
</div>

<% include ../partials/footer %>