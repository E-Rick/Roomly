<% layout('layouts/boilerplate') -%>
<div class="row justify-content-center">
  <div class="col-md-12 text-center mt-5">
    <h1><a href="/rooms/<%= room._id %>"><%= room.name %></a></h1>
  </div>
  <div class="col-xs-12 col-md-8 col-lg-6">
    <form action="/rooms/<%= room._id %>/reviews/<%= review._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <div class="rating d-flex justify-content-center">
          <input type="hidden" id="rating" name="review[rating]" value="<%= review.rating %>" required>
          <span  onmouseover="starmark(this)" onclick="starmark(this)" id="1one"  class="rating-stars fas fa-star checked"></span>
          <span onmouseover="starmark(this)" onclick="starmark(this)" id="2one" class="rating-stars fas fa-star <%= review.rating >= 2 ? 'checked' : '' %>"></span>
          <span onmouseover="starmark(this)" onclick="starmark(this)" id="3one" class="rating-stars fas fa-star <%= review.rating >= 3 ? 'checked' : '' %>"></span>
          <span onmouseover="starmark(this)" onclick="starmark(this)" id="4one" class="rating-stars fas fa-star <%= review.rating >= 4 ? 'checked' : '' %>"></span>
          <span onmouseover="starmark(this)" onclick="starmark(this)" id="5one" class="rating-stars fas fa-star <%= review.rating === 5 ? 'checked' : '' %>"></span>
        </div>
      </div>
      <div class="form-group">
        <textarea
          class="form-control"
          type="text"
          name="review[text]"
          placeholder="Write a review for this review..."
          rows="5"
        >
<%= review.text %></textarea
        >
      </div>
      <div class="form-group">
        <button onclick="result()" class="btn btn-primary btn-block">Submit your edits</button>
      </div>
    </form>
  </div>
</div>

