<% include ../partials/header %>


<div class="row">
    <div class="col-md-12">
        <h1 style="text-align: center">Review Page: <%= room.name %></h1>
        <a href="/rooms/<%= room._id %>">Go back to the room page</a>
        <div class="thumbnail">
            <div class="caption-full">
                <% if (room.rating === 0) { %>
                <h5>
                    <em>No reviews yet.</em>
                </h5>
                <% } else { %>
                <p>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star <% if (room.rating > 1.5) { %> checked <% } %>"></span>
                    <span class="fa fa-star <% if (room.rating > 2.5) { %> checked <% } %>"></span>
                    <span class="fa fa-star <% if (room.rating > 3.5) { %> checked <% } %>"></span>
                    <span class="fa fa-star <% if (room.rating > 4.5) { %> checked <% } %>"></span>
                    <em>(total reviews: <%= room.reviews.length %>)</em>
                </p>
                <p>
                    Current room rating: <strong><%= room.rating.toFixed(2) %></strong>
                </p>
                <p><h4>All reviews for this room:</h4></p>
                <hr style="margin-top: 0;">
                <% room.reviews.forEach(function(review){ %>
                <div class="row">
                    <div class="col-md-3">
                        <%- '<span class="fa fa-star checked"></span>'.repeat(review.rating) %><%- '<span class="fa fa-star"></span>'.repeat(5 - review.rating) %>
                        <div>Review by: <strong><%= review.author.username %></strong></div>
                        <span><em><%= review.updatedAt.toDateString() %></em></span>
                    </div>
                    <div class="col-md-9">
                        <p style="text-align: justify; word-wrap: break-word;">
                            <%= review.text %>
                        </p>
                        <% if(currentUser && review.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-sm btn-warning float-left mr-1"
                            href="/rooms/<%=room._id %>/reviews/<%=review._id %>/edit">Edit</a>
                        <form id="delete-form" action="/rooms/<%=room._id %>/reviews/<%=review._id %>?_method=DELETE" method="POST">
                            <input type="submit" class="btn btn-sm btn-danger" value="Delete">
                        </form>
                        <% } %>
                    </div>
                </div>
                <hr>
                <% }); %>
                <% } %>
                <div>
                    <a class="btn btn-primary <% if (currentUser && room.reviews.some(function (review) {return review.author.id.equals(currentUser._id)})) { %> disabled <% } %>" href="/rooms/<%= room._id %>/reviews/new">
                        Write a New Review</a>
                </div>
                <div style="margin-top: 10px;">
                    <a class="btn btn-default" href="/rooms/<%= room._id %>"><i class="fa fa-arrow-left"></i> Go back</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!--Review section-->


<% include ../partials/footer %>