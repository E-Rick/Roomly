<% layout('layouts/boilerplate') -%>

<div class="row justify-content-center">
  <div class="col-md-12 text-center mt-5">
    <h1><a href="/rooms/<%= room._id %>"><%= room.name %></a></h1>
  </div>
  <div class="col-xs-12 col-md-8 col-lg-6">
    <form action="/rooms/<%= room._id %>/reviews" method="POST">
      <div class="form-group">
        <div class="rating d-flex justify-content-center">
          <input type="hidden" id="rating" name="review[rating]" value="" required>
          <span  onmouseover="starmark(this)" onclick="starmark(this)" id="1one"  class="rating-stars fas fa-star"></span>
          <span onmouseover="starmark(this)" onclick="starmark(this)" id="2one" class="rating-stars fas fa-star "></span>
          <span onmouseover="starmark(this)" onclick="starmark(this)" id="3one" class="rating-stars fas fa-star "></span>
          <span onmouseover="starmark(this)" onclick="starmark(this)" id="4one" class="rating-stars fas fa-star"></span>
          <span onmouseover="starmark(this)" onclick="starmark(this)" id="5one" class="rating-stars fas fa-star"></span>
        </div>
      </div>
      <div class="form-group">
        <textarea
          class="form-control"
          type="text"
          name="review[text]"
          placeholder="Write a review for this room..."
          rows="5"
          id="comment" required
        ></textarea>
      </div>
      <div class="form-group">
        <button onclick="result()" class="btn btn-primary btn-block">Submit your review</button>
      </div>
    </form>
  </div>
</div>

