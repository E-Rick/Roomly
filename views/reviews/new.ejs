<% include ../partials/header %>
<div class="row justify-content-center">
  <div class="col-md-12 text-center">
    <h1>New Review: <%= room.name %></h1>
  </div>
  <div class="col-xs-12 col-md-6 col-lg-5">
    <form action="/rooms/<%= room._id %>/reviews" method="POST">
      <div class="form-group">
        <textarea
          class="form-control"
          type="text"
          name="review[text]"
          placeholder="Write a review for this room..."
          rows="5"
        ></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary btn-block">Submit a Review</button>
      </div>
    </form>
    <div class=" float-left">
      <a class="btn btn-default" href="/rooms/<%= room._id %>"><i class="fa fa-arrow-left"></i> Go back</a>
    </div>
  </div>
</div>
<% include ../partials/footer %>
